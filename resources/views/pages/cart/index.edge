</head>
<body>

  <header class="header">
    <h1>üõí ChamaMerce</h1>
  </header>

  <div class="container">
    <a href="{{ route('products.index') }}" class="back-link">‚Üê Voltar</a>

    <h2>Meu Carrinho</h2>

    @if(flashMessages.has('success'))
      <div class="success-message">{{ flashMessages.get('success') }}</div>
    @end

    @if(flashMessages.has('error'))
      <div class="error-message">{{ flashMessages.get('error') }}</div>
    @end

    @if(cartItems.length > 0)
      @each(item in cartItems)
        <div class="cart-item">
          <div>
            <div class="item-name">{{ item.product.name }}</div>
            <div>R$ {{ item.product.price }} x {{ item.quantity }}</div>
          </div>

          <div class="quantity-controls">
            <form action="{{ route('cart.decrease', [item.id]) }}" method="POST" style="margin: 0;">
              {{ csrfField() }}
              <button type="submit" class="qty-btn">-</button>
            </form>

            <span>{{ item.quantity }}</span>

            <form action="{{ route('cart.increase', [item.id]) }}" method="POST" style="margin: 0;">
              {{ csrfField() }}
              <button type="submit" class="qty-btn">+</button>
            </form>
          </div>

          <form action="{{ route('cart.remove', [item.id]) }}" method="POST" style="margin: 0;">
            {{ csrfField() }}
            <button type="submit" class="btn-remove">Remover</button>
          </form>
        </div>
      @end

      <div class="cart-summary">
        <div class="total">Total: R$ {{ total.toFixed(2) }}</div>
      </div>
    @else
      <div class="empty-cart">
        <h3>Carrinho vazio</h3>
      </div>
    @end
  </div>

  <div id="flash-buy" class="success-message" style="display: none;">
    Voc√™ realizou a compra!
  </div>

  <form action="{{ route('checkout.store') }}" method="POST">
    {{ csrfField() }}
    <button class="btn-comprar">Comprar</button>
  </form>

  <script>
    function showBuyFlash() {
      const flash = document.getElementById('flash-buy')
      flash.style.display = 'block'

      // Some ap√≥s 3 segundos
      setTimeout(() => {
        flash.style.display = 'none'
      }, 3000)
    }
  </script>

</body>
</html>